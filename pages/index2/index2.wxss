
.container{background: #f7f7f7;}

.btn-sudoku{display: flex;justify-content: space-between;flex-wrap: wrap;background: #fff}
.btn-sudoku .nav-item{width: 25%;text-align: center}
.btn-sudoku .icon{width: 70%;height: 131.25rpx;padding: 10% 15%;}
.nav-item .name{overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;white-space: normal;height: 3em;}
.nav-item .price{color: #f23030;font-size: 1.2em}
.nav-item .price text{color: #e5a087;font-size: .7em;text-decoration: line-through}
.nav-item .operate{display: flex;justify-content: space-between;align-items: center;color: #c1c1c1;font-size: .85em}
.nav-item .icon-cart{width: 50rpx;height: 50rpx;}

/**index.wxss**/
.inline-block {
  display: inline-block;
}
.text-overflow{
  word-break:keep-all;           /* 不换行 */
  white-space:nowrap;          /* 不换行 */
  overflow:hidden;               /* 内容超出宽度时隐藏超出部分的内容 */
  text-overflow:ellipsis;         /* 当对象内文本溢出时显示省略标记(...) ；需与overflow:hidden;一起使用。*/
}
.header {
  position: absolute;
  left: 0;
  top: 0;
  height: 94rpx;
  line-height: 94rpx;
  width: 100%;
  background: white;
  border-bottom: 1rpx solid #f2f2f2;
  overflow-x: auto;
}
.header-wrapper{
  height: 100%;
  overflow-x: auto;
}
.single {
  display: inline-block;
