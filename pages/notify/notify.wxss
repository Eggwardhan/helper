/* pages/notify/notify.wxss */

.block {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 150rpx;
  margin-bottom: 0rpx;
  background: #FFFACD

}

.left {
  width: 20%;
  height: 100%;
  padding: 5rpx;
  box-sizing: border-box;
}

.left image {
  width: 100%;
  height: 100%;
}

.right {
  flex: 1;
  height: 100%;
  border-bottom: 1px solid #eee;
  box-sizing: border-box;
  display: flex;
}

.content {
  padding: 10rpx;
  height: 100%;
  width: 80%;
  box-sizing: border-box;
}

.accept {
  flex: 1;
  height: 100%;
  box-sizing: border-box;
  margin-right: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.accept image  {
  width: 28px;
  height: 28px;
}
.evaluate-info{
    flex: 4;
  height: 100%;
  box-sizing: border-box;
  margin-right: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.evaluate {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 150rpx;
  margin-bottom: 0rpx;
  background-color: rgb(197, 249, 253);

}
.success{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 150rpx;
  margin-bottom: 0rpx;
  background-color: rgb(253, 246, 181);
}

.content view {
  width: 100%;
  margin-bottom: 20rpx;
}

.notify-name {
  font-size: 18px;
}

.notify-info {
  font-size: 14px;
  color: #999;
}

button {
  margin: 0;
  padding: 0;
  background-color: transparent;
}

button::after {
  border: none;
}

.button-hover {
  background-color: transparent;
}

.noMsg {
  display: block;
  margin:40rpx auto;
  width: 180rpx;
  height: 180rpx;
}
.noMsg-text{
      text-align: center;
      font-size: 40rpx;
}
