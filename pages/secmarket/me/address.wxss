.login-body{
    position: relative;
    box-sizing: border-box;
}
.login-body, .login-wrapper{
    height: 100%;
    box-sizing: border-box;
}
.login-wrapper .no-address{
    position: relative;
    display: block;
    margin: 0 auto;
    width: 27%;
    height: 100%;
    background-size: contain;
}
.no-arrow{
    position:absolute;
    left:0;
    top:25%;
    width:100%;
    height:56%;

}
.inline-block{
    display: inline-block;
}
.login-wrapper{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 90%;
    overflow-y: auto;
}
.single{
    background: white;
    margin-top: 20rpx;
    overflow: hidden;
}
.top-sec{
    overflow: hidden;
}
.bottom-sec{
    padding: 40rpx 34rpx;
    border-bottom: 1rpx solid #e5e5e5;
    font-size: 30rpx;
}
.user-info{
    margin: 12rpx 0;
}
.address-detail{
    margin: 16rpx 0;
}
.left-default{
    width: 58%;
}
.right-option{
    width: 39.5%;
}
.border-gray{
    border-bottom: 1rpx solid #e5e5e5;
    padding: 0 34rpx;
}
.getter, .phone, .address-detail, .left-default, .delete, .edit{
    position: relative;
    box-sizing: border-box;
    padding-left: 40rpx;
}
.edit{
    padding-right: 25rpx;
}
.right-arrow{
    position: absolute;
    width: 30rpx;
    height: 30rpx;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
}
.arrow{
    width: 30rpx;
    height: 30rpx;
    display: block;
}
.address-detail, .edit, .left-default{
    color: #888888;
}
.left-default:before{
    content: "";
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 22rpx;
    height: 22rpx;
    border: 1px solid #888888;
    border-radius: 50%;
    background: white;
    z-index: 1;
}
.active:before{
    border-color: #2fa7e0;
}
.active:after{
    position: absolute;
    content: "";
    width: 14rpx;
    height: 14rpx;
    left: 4rpx;
    top: 50%;
    transform: translateY(-50%);
    background: #2fa7e0;
    border: 1px solid white;
    border-radius: 50%;
    z-index: 2;
}
.delete{
    color: red;
}
.getter, .phone{
    font-size: 30rpx;
}
.address-detail{
    font-size: 26rpx;
}
.getter{
    width: 60%;
}
.phone{
    width: 38.5%;
}
.add-address{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
}
.address-btn{
    color: white;
    background-color: #2fa7e0;
}