@import "../../weui.wxss";

.userinfo {
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}
.userinfo-avatar {
  display: block;
  margin:40rpx auto;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}



.navigator:last-child {
  border-bottom: none;
}
.right-arrow {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  height: 40rpx;
  width: 40rpx;
}



.logout {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  color: white;
  background-color: #2fa7e0;
  border-radius: 0;
}