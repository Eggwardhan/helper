/**task.wxss**/

.container {
    padding: 0;
    font-size: 14rpx;
    background: #F0F4F3;
    color: #000;
     background: #ffffff;
}

.information {
    position: relative;
    width: 650rpx;
    padding: 40rpx 50rpx 30rpx;
    background: #FFB6C1;
    color: #fff;
    font-size: 38rpx;
    line-height: 48rpx;
}
.task-wrp{
    position: relative;
    width: 750rpx;
    height: 150rpx;
    background: #fff;
}
.task-wrp .bg-half{
    position: absolute;
    top: 0;
    width: 750rpx;
    height: 75rpx;
    background: #FFB6C1;
}
.task {
    position: relative;
    margin: 0 auto;
    width: 630rpx;
    height: 90rpx;
    padding: 30rpx;
    background: #fff;
    border: solid 1px #ebebeb;
    border-radius: 3px;
    box-shadow: 0 1px 2px #bebebe;
}
.task .avatar {
    flex: 1;
    width: 90rpx;
    height: 90rpx;
}

.task .avatar image {
    display: inline-block;
    width: 90rpx;
    height: 90rpx;
    border-radius: 90rpx;
}
.task .task-info{
    flex: 5;
    text-align: left;
    padding: 10rpx 20rpx;
    line-height: 38rpx;
}
.task .task-info text{
    display: block;
}
.task .task-info .task-name{
    font-size: 32rpx;
}
.task .task-info .task-des{
    font-size: 22rpx;
    color: #808080;
    line-height: 28rpx;
}
.task .follow{
    flex: 2;
    padding: 15rpx 0;
    font-size: 22rpx;
}
.task .follow text{
    display: inline-block;
    padding: 15rpx 20rpx;
    color: #f552e7;
    border: solid 2px #f38df7;
    border-radius: 6rpx;
}
.task-content{
    padding: 30rpx 40rpx;
    background: #ffffff;
}
.task-content text{
    font-size: 32rpx;
    color: #454545;
    line-height: 44rpx;
}
.task-content image{
    width: 100%;
    margin: 20rpx 0;
}
.task-footer{
    position: fixed;
    bottom: 0;
    height: 70rpx;
    border-top: solid 1px #ebebeb;
    background: #ffffff;
    width: 670rpx;
    padding: 20rpx 40rpx;
}
.task-footer .good{
    flex: 1;
    /*display: inline-block;*/
    height: 40rpx;
    border: solid 1px #d1d1d1;
    border-radius: 3px;
    padding: 10rpx 8rpx;
    margin: 10rpx 0;
}
.task-footer .good .order{
    display: inline-block;
}
.task-footer .good image{
    display: inline-block;
    width: 38rpx;
    height: 38rpx;
    vertical-align: middle;
}
.task-footer .good .order-num{
    display: inline-block;
    padding: 10rpx 4rpx;
    font-size: 20rpx;
}
.task-footer .operation-wrp{
    flex: 5;
}
.task-footer .operation{
    justify-content: space-between;
    padding: 0 0 0 60rpx;
}
.task-footer .operation-btn{
    flex: 1;
    text-align: center;
}
.task-footer .operation image{
    display: block;
    margin: 0 auto;
    width: 50rpx;
    height: 50rpx;
}
.task-footer .operation-btn text{
    display: block;
    font-size: 14rpx;
    color: #bebebe;
}
.flex-wrp{
  display: flex;
}
.flex-tab{
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
}
.flex-item{
  flex-grow: 1;
  text-align: center;
}
.mark{
  display: flex;
   background: #ffffff;
   margin-top: 40rpx;
}